<Window x:Class="WPF_IMAGE"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPOSE_ASSIST"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="#10000000"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Title="" Height="450" Width="800" WindowStartupLocation="CenterScreen" ShowInTaskbar="false" Topmost="True">
    <Grid>
        <Grid.ContextMenu>
            <ContextMenu x:Name="MENU_WINDOW">
                <MenuItem x:Name="MNI_LOAD_IMAGE" Header="Change image" />
                <MenuItem x:Name="MNI_CLOSE" Header="Close" />
            </ContextMenu>
        </Grid.ContextMenu>
        <Image x:Name="PCB_APPEND" Source="/RES/IMG/BLANK_16_9.png" Margin="0,0,0,0" Stretch="Fill" Opacity="1.0"/>
        <Slider x:Name="SLI_APPEND_IMAGE_OPACITY" HorizontalAlignment="Left" VerticalAlignment="Top" Height="22" Margin="0,0,0,0" Width="50" Value="50" Maximum="100" SmallChange="1"/>
    </Grid>
</Window>
