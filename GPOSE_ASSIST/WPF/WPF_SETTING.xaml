<Window x:Class="WPF_SETTING"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPOSE_ASSIST"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="#D0FFFFFF"
        Title="Setting" Height="300" Width="400" ResizeMode="NoResize">
    <Grid>
        <TabControl Margin="10,10,10,50" Background="#00000000">
            <TabItem Header="General">
                <GroupBox Header="" VerticalAlignment="Top" Margin="5,5,5,0" Height="60" Grid.ColumnSpan="3">
                    <Grid>
                        <Label HorizontalAlignment="Left" Margin="5,5,5,5" Content="Target process"/>
                        <ComboBox x:Name="CMB_KIND_GAMEPAD" HorizontalAlignment="Left" Margin="90,5,5,5" Width="200">
                            <ComboBoxItem Content="ffxiv_dx11"/>
                            <ComboBoxItem Content="chrome"/>
                            <ComboBoxItem Content="notepad"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>
            </TabItem>
            <TabItem Header="Save">
            </TabItem>
            
        </TabControl>
        <Grid VerticalAlignment="Bottom" Margin="5,5,5,5">
            <Button x:Name="BTN_OK" HorizontalAlignment="Right" Margin="5,5,90,5" Height="30" Width="80" Content="OK"/>
            <Button x:Name="BTN_CANCEL" HorizontalAlignment="Right" Margin="5,5,5,5" Height="30" Width="80" Content="Cancel"/>
        </Grid>
    </Grid>
</Window>
