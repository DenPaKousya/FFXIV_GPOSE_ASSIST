<Window x:Class="WPF_MOBILE_SETTING"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GPOSE_ASSIST"
      mc:Ignorable="d" 
      Title="Mobile Setting" Height="200" Width="800" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
	<Grid>
		<GroupBox Header="Send Command" VerticalAlignment="Top" Margin="5,5,5,5">
			<Grid VerticalAlignment="Top" Margin="5,5,5,5">
				<Label HorizontalAlignment="Left" Margin="5,5,5,5" Content="00"/>
				<ComboBox x:Name="CMB_SEND_COMMAND_00_KIND" HorizontalAlignment="Left" Margin="40,5,5,5" Width="80"/>
				<TextBox x:Name="TXT_SEND_COMMAND_00_CHAT" HorizontalAlignment="Left" Margin="120,5,5,5" Width="300" MaxLength="100" InputMethod.PreferredImeState="On" InputMethod.PreferredImeConversionMode="Alphanumeric"/>
				<ComboBox x:Name="CMB_SEND_COMMAND_00_KEY_01" HorizontalAlignment="Left" Margin="420,5,5,5" Width="80"/>
				<ComboBox x:Name="CMB_SEND_COMMAND_00_KEY_02" HorizontalAlignment="Left" Margin="500,5,5,5" Width="100"/>
				<TextBox x:Name="TXT_SEND_COMMAND_00_MOUSE_X" HorizontalAlignment="Left" Margin="600,5,5,5" Width="50" MaxLength="4" InputMethod.IsInputMethodEnabled="False"/>
				<TextBox x:Name="TXT_SEND_COMMAND_00_MOUSE_Y" HorizontalAlignment="Left" Margin="650,5,5,5" Width="50" TextAlignment="Right" MaxLength="4" InputMethod.IsInputMethodEnabled="False"/>
			</Grid>
		</GroupBox>
		<Grid VerticalAlignment="Bottom" Margin="5,5,5,5">
			<Button x:Name="BTN_OK" HorizontalAlignment="Right" Margin="5,5,90,5" Height="30" Width="80" Content="OK"/>
			<Button x:Name="BTN_CANCEL" HorizontalAlignment="Right" Margin="5,5,5,5" Height="30" Width="80" Content="Cancel"/>
		</Grid>
	</Grid>
</Window>
