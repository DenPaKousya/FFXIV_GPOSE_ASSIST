<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GPOSE_ASSIST_MOBILE.PAGE_HOT_BAR_2"
             Title="Hotbar2">
    <ScrollView
		Loaded="Layout_Loaded"
        Unloaded="Layout_Unloaded">
        <FlexLayout Direction="Row" AlignItems="Stretch" AlignContent="Stretch" Wrap ="Wrap" JustifyContent="SpaceEvenly">
            <Button Text="1" WidthRequest="128" HeightRequest="128"/>
            <Button Text="2" WidthRequest="128" HeightRequest="128"/>
            <Button Text="3" WidthRequest="128" HeightRequest="128"/>
            <Button Text="4" WidthRequest="128" HeightRequest="128"/>
            <Button Text="5" WidthRequest="128" HeightRequest="128"/>
            <Button Text="7" WidthRequest="128" HeightRequest="128"/>
            <Button Text="8" WidthRequest="128" HeightRequest="128"/>
            <Button Text="9" WidthRequest="128" HeightRequest="128"/>
            <Button Text="0" WidthRequest="128" HeightRequest="128"/>
            <Button Text="-" WidthRequest="128" HeightRequest="128"/>
            <Button Text="^" WidthRequest="128" HeightRequest="128"/>
        </FlexLayout>
    </ScrollView>
</ContentPage>